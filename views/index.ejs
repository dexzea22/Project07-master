<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:400,700'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      -webkit-font-smoothing: antialiased;
    }
    
    body {
  background: #FFF3EB;
}


    

    
    .error {
      text-align: center;
    }
    
    
    
   
.topnav {
  overflow: hidden;
  background-color: rgba(53, 46, 46, 0.117);
}

.topnav a {
  float: left;
  color: #C69B68;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #FFF3EB;
  color: black;
}
.nav{
  margin-right: 20px;
  margin-top: 20px;
  font-weight: bold;
}
.topnav {
  color: white;
}
.far {
  margin-left: -25px;
  margin-top: 25px;
  position: relative;
  z-index: 2;
}
.container{
  border: 1px solid black;
}


  </style>
</head>
  
<body>
  <div class="topnav">
  
    <a href="/login"><img src="logo.png" height="60px" width="60px"></a>
 
    <a class="nav" href="#home">Home</a>
    <a class="nav" href="#news">News</a>
    <a class="nav" href="#contact">Contact</a>
    <a class="nav" href="#about">About</a>
  </div>
  <div class="container">

    <img src="logo.png" height="500px" width="500px" alt="">
    <p style="margin-left: 10px; font-weight: bold; font-size: 50px; color: #C69B68;">We Deliver Good Food</p>

  <div class="login-form">
    <form action="/login" method="post">
      <h1>Login</h1>
      <div class="error">
        <% if (typeof errorMessage !== 'undefined') { %>
          <p style="color: red;"><%= errorMessage %></p>
        <% } %>
      </div>
      <div class="content">
        <div class="input-field">
          <input type="email" placeholder="Email . . . . ." id="email" name="email">
        </div>
        <div class="input-field">
          <input type="password" placeholder="Password . . . . ." id="password" name="password">
          <span toggle="#password" id="togglePassword" class="fa-fw fa-eye far toggle-password"></span>

        </div>
       <script>
      const togglePassword = document.querySelector('#togglePassword');
      const password = document.querySelector('#password');

      togglePassword.addEventListener('click', function (e) {
      // toggle the type attribute
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      // toggle the eye slash icon
      // Jerico Mahinay

      // Jerico Mahinay
      this.classList.toggle('fa-eye-slash');
        });
       </script>
        <a href="#" class="link">Forgot Your Password?</a>
      </div>
      <div class="action">
        <button type="button" onclick="location.href='/register'">Register</button>
        <button>Sign In</button>
      </div>
    </form>
  </div>
    
</div>
</body>
</html>